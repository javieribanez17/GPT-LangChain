<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Consultas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
    <div class="containerG">
        <h1>Consultas de reportes de afectación</h1>
        <div class="form-group">
            <label for="askModel">Respuesta del modelo GPT:</label>
            <div class="containerTable">
                <div class="horizontal-table">
                    <% let isFirst=true; %>
                        <% for (jso in paciente) { %>
                            <% if (isFirst) { %>
                                <div id="head" class="horizontal-row">
                                    <% for (const key in paciente[jso]) { %>
                                        <% for (const info in paciente[jso][key]) { %>
                                            <div class="horizontal-cell">
                                                <%= info %>
                                            </div>
                                            <% } %>
                                                <% } %>
                                </div>
                                <% isFirst=false; %>
                                    <% } %>

                                        <div class="horizontal-row">
                                            <% for (const key in paciente[jso]) { %>
                                                <% for (const info in paciente[jso][key]) { %>
                                                    <div class="horizontal-cell">
                                                        <%= paciente[jso][key][info] %>
                                                    </div>
                                                    <% } %>
                                                        <% } %>
                                        </div>
                                        <% } %>
                </div>
            </div>
            <!-- <textarea class="form-control" disabled="true" id="askModel" rows="10"><%= respondModel %></textarea> -->
        </div>
        <p>Reporte adverso consultado: <i><strong>
                    <%= consultPrev %>
                </strong></i></p>
        <form action="/gpt" method="post">
            <div class="form-group">
                <label for="questionModel">Escriba la descripción del reporte adverso:</label>
                <textarea class="form-control" id="questionModel" name="questionModel" rows="5"></textarea>
            </div>
            <div class="containerFlexButton">
                <div>
                    <button class="btn btn-primary" type="submit" name="sendRequest">Enviar</button>
                </div>
            </div>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
        crossorigin="anonymous"></script>
</body>

</html>